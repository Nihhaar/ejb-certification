<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
         version="3.0">

    <assembly-descriptor>
        <!-- below is dangerous - if not narrowed it will catch every ejb call -->
        <!-- if it also intercepts lifecycle callbacks, than those will be caught as well !! -->
        <!-- remember that only ONE !! lifecycle callback is allowed -->
        <interceptor-binding>
            <ejb-name>*</ejb-name>
            <interceptor-class>
                com.gmaslowski.interceptor.stateless.interceptor.ServiceDefaultInterceptor
            </interceptor-class>
        </interceptor-binding>
    </assembly-descriptor>

</ejb-jar>